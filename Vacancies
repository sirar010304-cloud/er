<script>
    
const expFilter = document.getElementById('expFilter'); 
const locFilter = document.getElementById('locFilter'); 
const salarySort = document.getElementById('salaryFilter'); 
const searchInput = document.getElementById('searchInput'); 
const jobs = Array.from(document.querySelectorAll('.job'));  

function filterJobs() { 
    const exp = expFilter.value.toLowerCase();
    const loc = locFilter.value.toLowerCase(); 
    const search = searchInput.value.toLowerCase(); 

    jobs.forEach(job => { 
        const jobExp = job.dataset.exp.toLowerCase(); 
        const jobLoc = job.dataset.loc.toLowerCase(); 
        const jobTitle = job.querySelector('h3').textContent.toLowerCase(); 

        let expMatch = (exp === 'all' || jobExp === exp); 
        let locMatch = (loc === 'all' || jobLoc === loc.replace('-', '')); 
        let searchMatch = jobTitle.includes(search); 

        if (expMatch && locMatch && searchMatch) { 
            job.classList.remove('hidden'); 
        } else { 
            job.classList.add('hidden'); 
        } 
    });
} 

function sortJobs() { 
    const val = salarySort.value; 
    const jobsList = document.getElementById('jobslist'); 

    let sortedJobs = jobs.slice(); 

    if (val === 'low') { 
        sortedJobs.sort((a,b) => parseInt(a.dataset.salary) - parseInt(b.dataset.salary)); 
    } else if (val === 'high') { 
        sortedJobs.sort((a,b) => parseInt(b.dataset.salary) - parseInt(a.dataset.salary)); 
    } 

    // Append in sorted order
    sortedJobs.forEach(job => jobsList.appendChild(job));
}

// Event listeners
expFilter.addEventListener('change', filterJobs);
locFilter.addEventListener('change', filterJobs);
searchInput.addEventListener('input', filterJobs);
salarySort.addEventListener('change', () => { 
    sortJobs(); 
    filterJobs(); // Keep filter applied after sorting
});
</script>


