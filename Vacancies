<button id="accessibility-btn" aria-label="Accessibility menu" aria-haspopup="true" aria-expanded="false" aria-controls="accessibility-menu">
    <img src="https://cdn-icons-png.flaticon.com/512/3815/3815150.png" alt="Open accessibility menu">
</button>  

<div id="accessibility-menu" role="dialog" aria-hidden="true" aria-label="Accessibility options" tabindex="-1"> 
    <button onclick="toggleContrast()"><i class="fa-solid fa-circle-half-stroke"></i> Contrast</button>

    <button class="accessibility-slider"> 
        <i class="fa-solid fa-text-height"></i> Bigger Text 
        <div class="slider-with-icons"> 
            <i class="fa-solid fa-minus"></i> 
            <input type="range" id="textSizeSlider" min="1" max="3" step="0.05" value="1" aria-label="Text size" /> 
            <i class="fa-solid fa-plus"></i> 
        </div>
    </button> 

    <button class="accessibility-slider"> 
        <i class="fa-solid fa-arrows-left-right"></i> Text Spacing 
        <div class="slider-with-icons"> 
         <i class="fa-solid fa-minus"></i>
         <input type="range" id="textSpacingSlider" min="0" max="5" step="0.1" value="0" aria-label="Text spacing" /> 
         <i class="fa-solid fa-plus"></i>
        </div>
    </button>


   <button onclick="pauseAnimations()"><i class="fa-solid fa-pause"></i> Pause Animations</button>
   <button onclick="dyslexiaFont()"><i class="fa-solid fa-font"></i> Dyslexiya Friendly</button>
   <button onclick="readingGuide()"><i class="fa-solid fa-book-open"></i>Reading Guide</button>
   <button onclick="readAloud()"><i class="fa-solid fa-volume-high"></i>Read Aloud</button> 
   <button onclick="changeTheme('light')"><i class="fa-solid fa-sun"></i> Light Theme</button>
   <button onclick="changeTheme('dark')"><i class="fa-solid fa-moon"></i> Dark Theme</button>
   <button onclick="changeTheme('blue')"><i class="fa-solid fa-water"></i>Blue Theme</button>
   <button onclick="changeTheme('green')"><i class="fa-solid fa-leaf"></i>Green Theme</button>
   <button onclick="resetAll()" class="reset"><i class="fa-solid fa-rotate-left"></i>Reset  </button>
</div> 
<div id="a11y-status" aria-live="polite" class="sr-only"></div>
<script> 
    const btn = document.getElementById("accessibility-btn"); 
    const menu = document.getElementById("accessibility-menu"); 
    const guide = document.getElementById("reading-guide");
    const textSizeSlider = document.getElementById("textSizeSlider"); 
    const textSpacingSlider = document.getElementById("textSpacingSlider"); 

   

     textSizeSlider.oninput = function() {
    
      document.body.style.fontSize = `${this.value}em`;

      };
    
     textSpacingSlider.oninput = function() { document.body.style.letterSpacing = `${ this.value}px`; } 
    function openAccessibilityMenu(open) {
        const shouldOpen = typeof open === 'boolean' ? open : (menu.style.display !== 'grid');
        if (shouldOpen) {
            menu.style.display = 'grid';
            btn.setAttribute('aria-expanded','true');
            menu.setAttribute('aria-hidden','false');
            const a11y = document.getElementById('a11y-status');
            if (a11y) a11y.textContent = 'Accessibility menu opened.';
            // Focus the first interactive element inside the menu
            const first = menu.querySelector('button, [tabindex]:not([tabindex="-1"])');
            if (first) first.focus();
            document.addEventListener('keydown', handleAccessibilityKeydown);
        } else {
            menu.style.display = 'none';
            btn.setAttribute('aria-expanded','false');
            menu.setAttribute('aria-hidden','true');
            const a11y = document.getElementById('a11y-status');
            if (a11y) a11y.textContent = 'Accessibility menu closed.';
            btn.focus();
            document.removeEventListener('keydown', handleAccessibilityKeydown);
        }
    }
    // Toggle on click or keyboard activation (Enter/Space)
    btn.addEventListener('click', () => openAccessibilityMenu());
    btn.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            openAccessibilityMenu();
        }
    });
    function handleAccessibilityKeydown(e) {
        if (e.key === 'Escape') {
            openAccessibilityMenu(false);
        }
    } 

    function toggleContrast() {  
        document.body.classList.toggle("high-contrast");
     } 
    
     function biggerText() { 
         document.body.classList.toggle("big-text"); 
        }
    
    function textSpacing() { 
        document.body.classList.toggle("spaced-text"); 
    }
    
    function pauseAnimations() { 
        document.body.classList.toggle("no-animation"); 
    }
    
    function dyslexiaFont() {  
        document.body.classList.toggle("dyslexia"); 
    }
    
    function readingGuide() { 
     if (guide.style.display === "block") { 
        guide.style.display = "none"; 

     } else { 
        guide.style.display = "block";
        
        window.addEventListener("scroll", updateGuidePosition)
     }
     }
     
     function updateGuidePosition() { 
        guide.style.top = `${window.scrollY + 30}px`;
     }
    
     function readAloud() {
        if(!window.speechSynthesis) { 
            alert("Your browser does not support speech synthesis."); 
            return; 
        }

        window.speechSynthesis.cancel(); 
       
        const excludeIds = ["accessibility-menu", "accessibility-btn", "reading-guide"]; 
        
        function getText(node) { 
            if(node.nodeType === Node.ELEMENT_NODE && excludeIds.includes(node.id)) {
             return ""; 
        } 

            if(node.nodeType===Node.TEXT_NODE) {
             return node.textContent.trim() + ""; 
        } 

            let text = ""; 
            node.childNodes.forEach(child=>{ 
                text +=getText(child);
            });
             return text; 
        }
     
        const textToRead = getText(document.body).trim(); 
        
        if(!textToRead) {  
            alert("No readable text found."); 
            return; 
        }
       
        const utterance = new SpeechSynthesisUtterance(textToRead); 
        utterance.lang="en-US";
        utterance.rate=0.6;
        utterance.pitch=2; 
        
         window.speechSynthesis.speak(utterance); 
    
    }

    function changeTheme(theme) { 
        switch(theme){ 
            case"light":
            document.body.style.backgroundColor='white'; 
            document.body.style.color='black';
             break;
            
             case "dark":
             document.body.style.backgroundColor='#121212';
             document.body.style.color='#f0f0f0'; 
             break;
            
             case "blue": 
             document.body.style.backgroundColor='#e0f7fa';
             document.body.style.color='#006064';
              break;
            
              case "green": 
              document.body.style.backgroundColor='#e8f5e9';
              document.body.style.color='#1b5e20';
              break;
           default: document.body.style.backgroundColor='#043b3d'; 
           document.body.style.color='white';
        }
     } 

     function resetAll() { 
        document.body.className = ""; 
        guide.style.display = "none"; 
        document.body.style.backgroundColor = "#043b3d"; 
        document.body.style.color = "white"; 
        document.body.style.fontSize = "1em"; 
        document.body.style.letterSpacing = "0px";
        // hide accessibility menu and reset ARIA state
        if (menu) { 
            menu.style.display = 'none';
            menu.setAttribute('aria-hidden','true');
        }
        if (btn) { btn.setAttribute('aria-expanded','false'); btn.focus(); }
        window.speechSynthesis.cancel(); 
        window.removeEventListener("scroll" ,updateGuidePosition);   
     }

</script>

