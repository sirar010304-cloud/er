<script> 
    const btn = document.getElementById("accessibility-btn"); 
    const menu = document.getElementById("accessibility-menu"); 
    const guide = document.getElementById("reading-guide");
    const textSizeSlider = document.getElementById("textSizeSlider"); 
    const textSpacingSlider = document.getElementById("textSpacingSlider"); 


     textSizeSlider.oninput = function() {
      document.body.style.fontSize = `${this.value}em`;

      };
    
     textSpacingSlider.oninput = function() { document.body.style.letterSpacing = `${ this.value}px`; } 
    
     btn.onclick = () => { 
        menu.style.display = menu.style.display === "grid" ? "none" : "grid";
    }; 

    function toggleContrast() {  
        document.body.classList.toggle("high-contrast");
     } 
    
     function biggerText() { 
         document.body.classList.toggle("big-text"); 
        }
    
    function textSpacing() { 
        document.body.classList.toggle("spaced-text"); 
    }
    
    function pauseAnimations() { 
        document.body.classList.toggle("no-animation"); 
    }
    
    function dyslexiaFont() {  
        document.body.classList.toggle("dyslexia"); 
    }
    
    function readingGuide() { 
     if (guide.style.display === "block") { 
        guide.style.display = "none"; 

     } else { 
        guide.style.display = "block";
        
        window.addEventListener("scroll", updateGuidePosition)
     }
     }
     
     function updateGuidePosition() { 
        guide.style.top = `${window.scrollY + 30}px`;
     }
    
     function readAloud() {
        if(!window.speechSynthesis) { 
            alert("Your browser does not support speech synthesis,"); 
            return; 
        }

        window.speechSynthesis.cancel(); 
       
        const excludeIds = ["accessibility-menu", "accessibility-btn", "reading-guide"]; 
        
        function getText(node) { 
            if(node.nodeType === Node.ELEMENT_NODE && excludeIds.includes(node.id)) {
             return ""; 
        } 

            if(node.nodeType===Node.TEXT_NODE) {
             return node.textContent.trim() + ""; 
        } 

            let text = ""; 
            node.childNodes.forEach(child=>{ 
                text +=getText(child);
            });
             return text; 
        }
     
        const textToRead = getText(document.body).trim(); 
        
        if(!textToRead) {  
            alert("No readable text fount."); 
            return; 
        }
       
        const utterance = new SpeechSynthesisUtterance(textToRead); 
        utterance.lang="en-US";
        utterance.rate=0.6;
        utterance.pitch=2; 
        
         window.speechSynthesis.speak(utterance); 
    
    }

    function changeTheme(theme) { 
        switch(theme){ 
            case"light":
            document.body.style.backgroundColor='white'; 
            document.body.style.color='black';
             break;
            
             case "dark":
             document.body.style.backgroundColor='#121212';
             document.body.style.color='#f0f0f0'; 
             break;
            
             case "blue": 
             document.body.style.backgroundColor='#e0f7fa';
             document.body.style.color='#006064';
              break;
            
              case "green": 
              document.body.style.backgroundColor='#e8f5e9';
              document.body.style.color='#1b5e20';
              break;
           default: document.body.style.backgroundColor='#043b3d'; 
           document.body.style.color='white';
        }
     } 

     function resetAll() { 
        document.body.className = ""; 
        guide.style.display = "none"; 
        document.body.style.backgroundColor = "#043b3d"; 
        document.body.style.color = "white"; 
        document.body.style.fontSize = "1em"; 
        document.body.style.letterSpacing = "0px";
        window.speechSynthesis.cancel(); 
        window.removeEventListener("scroll" ,updateGuidePosition);   
     }

</script> 



</body>
